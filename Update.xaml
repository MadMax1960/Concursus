<Window x:Class="Concursus.Update"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Concursus"
        mc:Ignorable="d"
        Title="Update Mod Manager" Height="591" Width="800"
        ResizeMode="NoResize"
        >
    <StackPanel>
        <Label Content="Current Version:" Margin="0,10,0,0"></Label>
        <TextBox x:Name="txtCurrVersion" IsReadOnly="True" Margin="10,10,10,0" />

        <Label Content="Latest Version:" Margin="0,10,0,0"></Label>
        <TextBox x:Name="txtLatestVersion" IsReadOnly="True" Margin="10,10,10,0" />

        <Label Content="Update Description:" Margin="0,10,0,0"></Label>
        <TextBox x:Name="txtUpdateNotes" IsReadOnly="True" TextWrapping="Wrap" Margin="10,10,10,0" Height="127" />

        <DockPanel Margin="10,22,10,0">
            <Button x:Name="btnUpdate" Content="Update" Width="380" Height="50" HorizontalAlignment="Left" Click="btnUpdate_Click"/>
            <Button x:Name="btnCancel" Content="Back" Width="380" Height="50" HorizontalAlignment="Right" Click="btnCancel_Click"/>
        </DockPanel>

        <TextBox x:Name="txtLog" IsReadOnly="True" TextWrapping="Wrap" Margin="10,20,10,0" Height="127" />


    </StackPanel>
</Window>
